{% block stylesheets %}
    <link rel="stylesheet" type="text/css" href="{{ asset('assets/swagger/css/swagger-ui.css') }}">
{% endblock %}

{% block topScripts %}
    <script src="{{ asset('assets/swagger/js/swagger-ui-bundle.js') }}"></script>
    <script src="{{ asset('assets/swagger/js/swagger-ui-standalone-preset.js') }}"></script>
{% endblock %}

{% block pageContent %}
    <div id="swagger-ui"></div>
{% endblock %}

{% block bottomScripts %}
    <script>
        window.onload = function() {
            const swg = SwaggerUIBundle({
                urls: [
                    {url: "{{ asset('assets/swagger/doc/tickets.yaml') }}", name:"Tickets"},
                    {url: "{{ asset('assets/swagger/doc/events.yaml') }}", name:"Events"},
                    {url: "{{ asset('assets/swagger/doc/organizers.yaml') }}", name:"Organizers"},
                ],
                dom_id: '#swagger-ui',
                deepLinking: true,
                presets: [
                    SwaggerUIBundle.presets.apis,
                    SwaggerUIStandalonePreset
                ],
                displayRequestDuration: true,
                plugins: [
                    SwaggerUIBundle.plugins.DownloadUrl
                ],
                validatorUrl: null,
                layout: "StandaloneLayout",
                jsonEditor: true,
                displayOperationId: true
            });

            window.swg = swg;
        }
    </script>
{% endblock %}
